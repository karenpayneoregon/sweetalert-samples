@page
@model SweetAlertExamples.Pages.IconPositionPageModel
@{
}

@*
    This code originated from https://stackoverflow.com/a/73262219/5509738
*@

<link rel="stylesheet" href="css/iconsSheet.css"/>

<div class="container">


    <div class="d-flex justify-content-center text-center w-75 position-absolute top-50 start-50 translate-middle">
        <p class="card-text fs-4">Provides several code samples using <a href="https://sweetalert2.github.io" target="_blank">sweet alert</a></p>
    </div>

    <form method="post" id="form1" class="mt-5">
        
        <div class="d-grid gap-2 col-6 mx-auto">

            <div class="row">
                <button type="button" id="showIconLeft" class="btn btn-primary">Show</button>
            </div>

        </div>

    </form>

</div>


<script>
    document.getElementById('showIconLeft').addEventListener("click", function () {
        Swal.fire({
            html: '<div class="container"><div><svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="5 5 40 40"><path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/></svg></div><div class="textDiv">All done</div></div>',
            position: 'center',
            showConfirmButton: false,
            customClass: {
                popup: 'swal-wide',
                icon: 'icon-class'
            }
        });
    });
</script>



