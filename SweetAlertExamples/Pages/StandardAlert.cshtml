@page
@model SweetAlertExamples.Pages.StandardAlertModel
@{
}
<style>
    body.swal2-shown > [aria-hidden="true"] {
        transition: 0.1s filter;
        filter: blur(10px);
    }
</style>

<div class="container">
    
    <div class="d-flex justify-content-center text-center w-75 position-absolute top-50 start-50 translate-middle">
        <p class="card-text fs-4">Provides several code samples using <a href="https://sweetalert2.github.io" target="_blank">sweet alert</a></p>
    </div>
    
    <form method="post" id="form1" class="mt-5">

        <div class="d-grid gap-2 col-6 mx-auto">

            <div class="row">
                <button type="button"
                        id="showAlert1"
                        class="btn btn-primary">
                    Basic animated
                </button>
            </div>
            
            <div class="row">
                <button type="button"
                        id="showAlert2"
                        class="btn btn-primary">
                    Basic not animated
                </button>
            </div>
            
            <div class="row">
                <button type="button"
                        id="showAlert3"
                        class="btn btn-primary">
                    Modal
                </button>
            </div>

            <div class="row">
                <button type="button"
                        id="showAlert4"
                        class="btn btn-primary">
                    Blurred backdrop
                </button>
            </div>
        </div>

    </form>
</div>

<script>
    document.getElementById('showAlert1').addEventListener("click", function () {
        Swal.fire(
            'Good job!',
            'You clicked the button!',
            'success'
        );
    });

    document.getElementById('showAlert2').addEventListener("click", function () {
        Swal.fire('Refreshing change from a standard alert ');
    });

    document.getElementById('showAlert3').addEventListener("click", function () {
        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-danger'
            },
            buttonsStyling: false
        });

        swalWithBootstrapButtons.fire({
            title: 'Something went wrong',
            html: "<strong>Call the help desk</strong>",
            icon: 'error',
            allowOutsideClick: false,
            allowEscapeKey: false,
            reverseButtons: true
        });
    });

    // see styling at top of page
    document.getElementById('showAlert4').addEventListener("click", function () {
        Swal.fire({ title: 'We control what you can see!!!' });
    });

  
</script>